<%- include('partials/header') %>
<div class="container mt-5">
    <h1>UPDATE BOOK (CHANGE SHELF)</h1>

    <%if (message) {%>
    <strong><%=message['intro']%></strong> <p><%=message['message']%></p>
    <%}%>

    <div class="row">
        <div class="col-sm-8">
            <div class="card">
                <div class="card-body">

                    <form action="/updateBook" method="POST">
                        <div class="form-group">
                            <label for="ISBN">ISBN</label>
                            <input type="text" class="form-control" name="ISBN">
                        </div>
                        <div class="form-group">
                            <label for="shelf_id">New Shelf ID</label>
                            <input type="text" class="form-control" name="shelf_id">
                        </div>
                        <button type="submit" class="btn btn-dark">Update Book</button>
                    </form>

                </div>
            </div>
        </div>

    </div>
</div>

<%- include('partials/footer') %>